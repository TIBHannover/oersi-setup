# Show versions of oersi modules
#

echo "--------"
echo "Frontend"
echo "--------"
cat {{ oerindex_frontend_instdir }}/build.info
FRONTEND_COMMIT_SHA=$(grep "COMMIT_SHA=" {{ oerindex_frontend_instdir }}/build.info | cut -d'=' -f2)
