{
  "index_patterns": ["{{ elasticsearch_oer_index_name_prefix }}{{ elasticsearch_oer_index_version }}_*", "{{ elasticsearch_oer_index_internal_name_prefix }}{{ elasticsearch_oer_index_version }}_*"],
  "template": {
    "settings": {
      "index": {
{% if oerindex_features_use_synonyms %}
        "analysis": {
          "analyzer": {
            "default": {
              "type": "standard"
            },
            "default_search": {
              "tokenizer": "standard",
              "filter": [ 
                "lowercase",
                "graph_synonyms"
              ]
            }            
          },
          "filter": {
            "graph_synonyms": {
              "type": "synonym_graph",
              "synonyms_path": "synonym.txt",
              "updateable": true
            }
          }
        },
{% endif %}
        "number_of_shards": "{{ elasticsearch_oer_index_number_of_shards }}",
        "number_of_replicas": "{{ elasticsearch_oer_index_number_of_replicas }}"
      }
    },
    "mappings" : {
      "dynamic_templates": [
        {
          "learningResourceType_prefLabel": {
            "path_match": "learningResourceType.prefLabel.*",
            "mapping": {
              "type": "text",
              "copy_to": "learningResourceType.prefLabel_full"
            }
          }
        },
        {
          "about_prefLabel": {
            "path_match": "about.prefLabel.*",
            "mapping": {
              "type": "text",
              "copy_to": "about.prefLabel_full"
            }
          }
        }
      ],
      "dynamic": "false",
      "properties" : {
        "about" : {
          "properties" : {
            "id" : {
              "type" : "keyword"
            },
            "prefLabel" : {
              "dynamic" : "true",
              "properties" : {}
            },
            "prefLabel_full": {
              "type": "text"
            }
          }
        },
        "audience" : {
          "properties" : {
            "id" : {
              "type" : "keyword"
            },
            "prefLabel" : {
              "dynamic" : "true",
              "properties" : {}
            }
          }
        },
        "caption": {
