{
  "index_patterns": ["{{ elasticsearch_oer_index_name_prefix }}{{ elasticsearch_oer_index_version }}_*", "{{ elasticsearch_oer_index_internal_name_prefix }}{{ elasticsearch_oer_index_version }}_*"],
  "template": {
    "settings": {
      "index": {
{% if oerindex_features_use_synonyms %}
        "analysis": {
          "analyzer": {
            "synonym": {
              "tokenizer": "standard",
              "filter": [ 
                "lowercase",
                "graph_synonyms"
              ]
            }
          },
          "filter": {
            "graph_synonyms": {
              "type": "synonym_graph",
              "synonyms_path": "synonym.txt",
              "updateable": true
            }
          }
        },
{% endif %}
        "number_of_shards": "{{ elasticsearch_oer_index_number_of_shards }}",
        "number_of_replicas": "{{ elasticsearch_oer_index_number_of_replicas }}"
      }
    },
    "mappings" : {
      "dynamic": "false",
      "properties" : {
        "about" : {
          "properties" : {
            "id" : {
              "type" : "keyword"
            },
            "prefLabel" : {
              "dynamic" : "true",
              "properties" : {}
            }
          }
        },
        "audience" : {
          "properties" : {
            "id" : {
              "type" : "keyword"
            },
            "prefLabel" : {
              "dynamic" : "true",
              "properties" : {}
            }
          }
        },
        "creator" : {
          "properties" : {
            "id" : {
              "type" : "keyword"
            },
            "name" : {
              "type" : "text",
              "fields" : {
                "keyword" : {
                  "type" : "keyword"
                }
              }
            },
            "type" : {
              "type" : "keyword"
            }
          }
        },
        "dateCreated" : {
          "type" : "date",
          "index" : true
        },
        "datePublished" : {
          "type" : "date",
          "index" : true
        },
        "description" : {
{% if oerindex_features_use_synonyms %}
          "analyzer": "standard",
          "search_analyzer": "synonym",
{% endif %}
          "type" : "text"
        },
        "id" : {
          "type" : "keyword",
          "index": false
        },
        "image" : {
          "type" : "keyword",
          "index": false
        },
        "inLanguage" : {
          "type" : "keyword"
        },
        "learningResourceType" : {
          "properties" : {
            "id" : {
              "type" : "keyword"
            },
            "prefLabel" : {
              "dynamic" : "true",
              "properties" : {}
            }
          }
        },
        "license" : {
          "properties" : {
            "id" : {
              "type" : "keyword"
            }
          }
        },
        "name" : {
{% if oerindex_features_use_synonyms %}
          "analyzer": "standard",
          "search_analyzer": "synonym",
{% endif %}
          "type" : "text"
        },
        "mainEntityOfPage" : {
          "properties" : {
            "id" : {
              "type" : "keyword",
              "index": false
            },
            "type" : {
              "type" : "keyword"
            },
            "dateCreated" : {
              "type" : "date",
              "index" : true
            },
            "dateModified" : {
              "type" : "date",
              "index" : true
            },
            "provider" : {
              "properties" : {
                "id" : {
                  "type" : "keyword",
                  "index": false
                },
                "type" : {
                  "type" : "keyword"
                },
                "name" : {
                  "type" : "keyword"
                }
              }
            }
          }
        },
        "publisher" : {
          "properties" : {
            "id" : {
              "type" : "keyword",
              "index": false
            },
            "type" : {
              "type" : "keyword"
            },
            "name" : {
              "type" : "text",
              "fields" : {
                "keyword" : {
                  "type" : "keyword"
                }
              }
            }
          }
        },
        "sourceOrganization" : {
          "properties" : {
            "id" : {
              "type" : "keyword",
              "index": false
            },
            "type" : {
              "type" : "keyword"
            },
            "name" : {
              "type" : "keyword"
            }
          }
        },
        "type": {
          "type" : "keyword"
        },
        "keywords" : {
{% if oerindex_features_use_synonyms %}
          "analyzer": "standard",
          "search_analyzer": "synonym",
{% endif %}
          "type" : "text",
          "fields" : {
            "keyword" : {
              "type" : "keyword"
            }
          }
        },
        "encoding": {
          "properties": {
            "type": {
              "type": "keyword"
            },
            "bitrate": {
              "type": "keyword"
            },
            "contentSize": {
              "type": "keyword"
            },
            "contentUrl": {
              "type": "keyword",
              "index": false
            },
            "embedUrl": {
              "type": "keyword",
              "index": false
            },
            "encodingFormat": {
              "type": "keyword"
            },
            "sha256": {
              "type": "keyword"
            }
          }
        },
        "persons" : {
          "properties" : {
            "id" : {
              "type" : "keyword"
            },
            "name" : {
              "type" : "text",
              "fields" : {
                "keyword" : {
                  "type" : "keyword"
                }
              }
            },
            "type" : {
              "type" : "keyword"
            }
          }
        },
        "institutions" : {
          "properties" : {
            "id" : {
              "type" : "keyword",
              "index": false
            },
            "type" : {
              "type" : "keyword"
            },
            "name" : {
              "type" : "keyword"
            }
          }
        }
      }
    }
  }
}